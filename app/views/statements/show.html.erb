<h1>Statement: <%= @statement.created_at.strftime('%d/%m/%y') %></h1>
<h2>Income/Expenditure rating: <%= @statement.income_expenditure_rating %></h2>
<p>Disposable income: <%= @statement.disposable_income %></h2>

<div class="container mt-4">
  <div class=" d-flex flex-row justify-content-between">
    <div class="d-flex flex-column">
      <h2>Income</h2>
      <% @statement.incomes.each do |income| %>
        <p><%= income.name %>: <%= income.amount %></p>
      <% end %>

      <h3>Total Income: <%= @statement.total_income %></h3>
    </div>

    <div class="d-flex flex-column">
      <h2>Expenditure</h2>
      <% @statement.expenditures.each do |expenditure| %>
        <p><%= expenditure.name %>: <%= expenditure.amount %></p>
      <% end %>

      <h3>Total Expenditure: <%= @statement.total_expenditure %></h3>
    </div>
  </div>
</div>
